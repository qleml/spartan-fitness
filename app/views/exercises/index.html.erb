<div class="flex flex-col">
<div class="p-4 bg-gray-100 rounded-sm">
  <h1 class="font-bold text-4xl text-center text-blue-600">Exercises#index</h1>

  <h2 class="font-bold text-5xl text-green-400">Exercises</h2>
  <ul>
    <% @exercises.each do |exercise| %>
    <li>
      <%= link_to exercise.name, exercise %>
    </li>
    <% end %>
  </ul>
</div>

<%= link_to "New Exercise", new_exercise_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
</div>